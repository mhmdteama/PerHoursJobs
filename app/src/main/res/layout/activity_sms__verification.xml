<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mhmd.perhoursjobs.Sms_Verification"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/rounded_toolbar"
        android:theme="?attr/actionBarTheme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SMS verification"
            android:textColor="#ffffff"
            android:textSize="30sp" />

    </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your mobile Number"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/mobileNum"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:inputType="number"
        android:hint="Enter your mobile number"
        android:textSize="15sp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:background="@drawable/rounded_edittext_focused"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your code received"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/smsCode"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:inputType="text"
        android:textColorHint="#000"
        android:hint="Enter SMS code"
        android:textSize="15dp"
        android:textColor="#000"
        android:background="@drawable/rounded_edittext_focused"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/dontReceive"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Did't receive SMS ? send again"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_button"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        />
    <Button
        android:id="@+id/next"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_button"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />


</LinearLayout>
